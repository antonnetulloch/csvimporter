<Window x:Class="CSVImporter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSVImporter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" Margin="10">
            <WrapPanel HorizontalAlignment="Center" DockPanel.Dock="Top" Margin="10">
                <Button Name="btnOpenFile" Click="BtnOpenFile_Click">Import File(s)</Button>
            </WrapPanel>
            <TextBox Name="txtEditor" />
        </DockPanel>
        <TextBox Grid.Row="1" Name="txtImportedSize" />
        <ProgressBar Grid.Row="2" x:Name="prgFileImport" Visibility="Hidden" Minimum="0"/>
    </Grid>
</Window>
